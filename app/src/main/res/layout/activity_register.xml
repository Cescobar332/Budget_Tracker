<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/iv_border_register_up"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginBottom="22dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/tv_register_activity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/purpledge1" />

    <ImageView
        android:id="@+id/iv_border_register_down"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/purpledge2" />

    <TextView
        android:id="@+id/tv_register_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="464dp"
        android:text="@string/register"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_border_register_up" />

    <ImageView
        android:id="@+id/iv_register_edittexts"
        android:layout_width="353dp"
        android:layout_height="160dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_register_activity"
        app:srcCompat="@drawable/linespurple" />

    <ImageButton
        android:id="@+id/ibtn_next_register"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="310dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="24dp"
        android:background="#00FFFFFF"
        android:onClick="clickGuardar"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/iv_border_register_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_register_activity"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/nextpurple" />

    <TextView
        android:id="@+id/tv_image_user_register"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/logout"
        android:backgroundTint="@color/purple_op"
        app:layout_constraintEnd_toStartOf="@+id/et_username_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_register_edittexts" />

    <TextView
        android:id="@+id/tv_image_password_register"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/password"
        android:backgroundTint="@color/purple_op"
        app:layout_constraintEnd_toStartOf="@+id/et_password_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_image_user_register" />

    <TextView
        android:id="@+id/tv_image_email_register"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/email"
        android:backgroundTint="@color/purple_op"
        app:layout_constraintEnd_toStartOf="@+id/et_email_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_image_password_register" />

    <EditText
        android:id="@+id/et_username_register"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_border_button"
        android:ems="10"
        android:hint="@string/username"
        android:inputType="text"
        android:textColorHint="@color/purple_op"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_register_edittexts" />

    <EditText
        android:id="@+id/et_password_register"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/shape_border_button"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="text|textPassword"
        android:textColorHint="@color/purple_op"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_username_register" />

    <EditText
        android:id="@+id/et_email_register"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_border_button"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="text|textEmailAddress"
        android:textColorHint="@color/purple_op"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_password_register" />

    <Button
        android:id="@+id/btn_login_register"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/shape_border_button_purple"
        android:onClick="clickLogin"
        android:text="@string/login"
        android:textColor="@color/purple_op"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>